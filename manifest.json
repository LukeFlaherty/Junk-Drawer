{
  "name": "Junk Drawer",
  "version": "1.0",
  "description": "Building the collecter of web content",
  "background": {
    "scripts": ["popup.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Take a screen shot!",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/camera16.png",
    "32": "images/camera32.png",
    "64": "images/camera64.png",
    "128": "images/camera128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": ["inject-script.js"],
  "permissions": ["activeTab", "tabs", "http://*/", "https://*/"],
  "manifest_version": 2
}
