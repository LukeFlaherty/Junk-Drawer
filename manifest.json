{
  "name": "Junk Drawer",
  "version": "1.0",
  "description": "Building the collecter of web content",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Take a screen shot!"
  },
  "icons": {
    "16": "images/camera16.png",
    "32": "images/camera32.png",
    "64": "images/camera64.png",
    "128": "images/camera128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "activeTab",
    "desktopCapture",
    "downloads"
  ],
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}
